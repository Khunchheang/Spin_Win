<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#234e35">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <Switch
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/_sound"
                android:textSize="25sp"
                android:textColor="@android:color/background_light"
                android:layout_weight="0"
                android:checked="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/background_light"
                android:text="Background:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>
           <RadioGroup
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <RadioButton
                   android:id="@+id/radioBtn_Green"
                   android:layout_width="90dp"
                   android:layout_height="wrap_content"
                   android:textColor="@android:color/background_light"
                   android:textSize="20sp"
                   android:checked="true"
                   android:buttonTint="@color/orange"
                   android:text="@string/greenBackground"/>

               <TextView
                   android:layout_width="20dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text=""/>

               <RadioButton
                   android:id="@+id/radioBtn_Red"
                   android:layout_width="90dp"
                   android:layout_height="wrap_content"
                   android:textColor="@android:color/background_light"
                   android:textSize="20sp"
                   android:checked="false"
                   android:text="@string/redBackground"/>

           </RadioGroup>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#0d8c33"
                android:textSize="20sp"
                android:textColor="@android:color/background_light"
                android:text="@string/_btnClose"
                android:id="@+id/btn_close"
                android:layout_marginRight="10dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=""/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#0d8c33"
                android:textSize="20sp"
                android:textColor="@android:color/background_light"
                android:text="@string/_btnOk"
                android:id="@+id/btn_settingOK"
                android:layout_marginRight="10dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""/>

    </LinearLayout>

</RelativeLayout>


